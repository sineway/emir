{
    "manifest_version": 2,

    "name": "Envato Estimate",
    "description": "View estimated item revenue on Envato Market",

    "version": "1.1.0",
    "author": "Sineway",

    "icons": {
        "500": "images/icons8-estimate-500.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "page": "background.html"
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": "images/icons8-estimate-500.png"
    },
    "minimum_chrome_version": "76.0",
    "applications": {
        "gecko": {
            "id": "envato-estimate@sineway",
            "strict_min_version": "68.0"
        }
    }
}
