{
    "manifest_version": 2,
    "name": "Envato Estimate",
    "description": "Shows earnings an item generates on Envato Market",
    "version": "1.0.1",
    "minimum_chrome_version": "76.0",
    "applications": {
        "gecko": {
            "id": "envato-estimate@sineway",
            "strict_min_version": "68.0"
        }
    },
    "author": "Sineway",
    "icons": {
        "500": "icons/icons8-estimate-500.png"
    },
    "permissions": ["tabs", "storage"],
    "background": {
        "page": "pages/background.html"
    },
    "page_action": {
        "default_popup": "pages/popup.html",
        "default_icon": "icons/icons8-estimate-500.png"
    }
}